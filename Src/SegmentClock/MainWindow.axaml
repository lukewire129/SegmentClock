<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="SegmentClock.MainWindow"
        Title="SegmentClock" Background="#252525">
    <Border Padding="200">
        <StackPanel Orientation="Horizontal" Spacing="5" HorizontalAlignment="Center" VerticalAlignment="Center">
            <SevenSegment Tag="{Binding Hour0}" />
            <SevenSegment Tag="{Binding Hour1}" />
            <Colons/>
            <SevenSegment Tag="{Binding Min0}" />
            <SevenSegment Tag="{Binding Min1}" />
        </StackPanel>
    </Border>
</Window>